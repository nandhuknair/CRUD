<%- include('header') %>


<div class="container mt-5"> 
    <form action="/logout" method="post">
        <button class="btn btn-success btn-sm mb-4" type="submit">Logout</button></form>
    
    <button type="button" class="btn btn-dark">
    <a href="add" class="text-light text-decoration-none" ><i class="fas fa-add fa-lg mx-1"></i>Adduser</a>
</button>
</div>

<% if(!user || user.length === 0) { %>
    <div class="alert alert-warning mt-5 container text-center" role="alert">
        There is no user  ðŸ¥º
      </div>
<%} else{ %>

<div class="container">

    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table table-stripped ">
                    <thead>
                        <tr class="table-dark">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>action</th> 
                        </tr> 
                    </thead>
                    <tbody class="mt-5">
                        <% user.forEach((data,index) => { %>
                           
                            <tr>  
                                <td><%= index +1 %></td>
                                <td><%= data.name %></td>
                                 <td><%= data.email %></td>
                                <td><%= data.password %></td> 
                                <td>
                                    <a href="/edit/<%= data._id %>" class="text-success btn-edit">
                                        <i class="fas fa-edit fa-lg mx-1"></i>
                                    </a>
                                    <a href="/edit/<%= data._id %>/delete" class="text-danger">
                                        <i class="fas fa-trash fa-lg mx-1"></i>
                                    </a>
                                </td>
                            </tr> 
                            
                            <% }) %>
                    </tbody>  
                   
                </div>
            </div>
        </div>
       
    </div>
<% } %>
<%- include('footer') %>
